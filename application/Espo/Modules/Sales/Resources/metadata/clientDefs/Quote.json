{
    "controller":"controllers/record",
    "boolFilterList": ["onlyMy"],
    "filterList":[
        "actual",
        {
            "name":"approved",
            "style":"success"
        }
    ],
    "recordViews":{
        "detail":"sales:views/quote/record/detail",
        "edit":"sales:views/quote/record/edit",
        "detailSmall":"sales:views/quote/record/detail-small",
        "editSmall":"sales:views/quote/record/edit-small"
    },
    "bottomPanels":{
        "detail":[
            "__APPEND__",
            {
                "name":"items",
                "label":"Items",
                "view":"sales:views/quote/record/panels/items",
                "notRefreshable":true,
                "sticked":true,
                "isForm":true
            }
        ],
        "edit":[
            "__APPEND__",
            {
                "name":"items",
                "label":"Items",
                "view":"sales:views/quote/record/panels/items",
                "notRefreshable":true,
                "sticked":true,
                "isForm":true
            }
        ]
    },
    "menu":{
        "list":{
            "buttons":[
                {
                    "label":"Templates",
                    "link":"#Template",
                    "acl":"read",
                    "aclScope":"Template"
                }
            ],
            "dropdown":[
                {
                    "label":"Taxes",
                    "link":"#Tax",
                    "acl":"read",
                    "aclScope":"Tax"
                },
                {
                    "label":"Shipping Providers",
                    "link":"#ShippingProvider",
                    "acl":"read",
                    "aclScope":"ShipingProvider"
                },
                {
                    "label":"Quote Items",
                    "link":"#QuoteItem",
                    "acl":"read",
                    "aclScope":"QuoteItem"
                }
            ]
        }
    },
    "dynamicLogic": {
        "fields": {
            "dateInvoiced": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "status",
                            "value": "Approved"
                        }
                    ]
                }
            },
            "account": {
                "readOnly": {
                    "conditionGroup": [
                        {
                            "type": "or",
                            "value": [
                                {
                                    "type": "isNotEmpty",
                                    "attribute": "opportunityId",
                                    "data": {
                                        "field": "opportunity"
                                    }
                                }
                            ]
                        }
                    ]
                }
            }
        }
    },
    "additionalLayouts":{
        "detailBottomTotal": {
            "type": "list",
            "dataAttributeList": ["name", "view", "customLabel"]
        },
        "listForAccount": {
            "type": "list"
        }
    },
    "relationshipPanels": {
        "salesOrders": {
            "createAction": "createRelatedSalesOrder",
            "view": "sales:views/quote/record/panels/sales-orders",
            "layout": "listForAccount",
            "selectDisabled": true
        },
        "invoices": {
            "createAction": "createRelatedInvoice",
            "view": "sales:views/quote/record/panels/invoices",
            "layout": "listForAccount",
            "selectDisabled": true
        }
    },
    "calculationHandler": "sales:quote-calculation-handler",
    "iconClass":"fas fa-file-invoice-dollar"
}