{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true
        },
        "number": {
            "type": "varchar",
            "maxLength": "100",
            "fieldManagerAdditionalParamList": [
                {
                    "name": "useAutoincrement",
                    "type": "bool"
                }
            ],
            "useAutoincrement": true
        },
        "numberA": {
            "type": "number",
            "prefix": "O-",
            "padLength": 5,
            "disabled": true
        },
        "status": {
            "type": "enum",
            "options": ["Draft", "Ready", "Active", "Approved", "Completed", "Rejected", "Canceled"],
            "style": {
                "Completed": "success",
                "Rejected": "danger",
                "Canceled": "danger"
            },
            "default": "Draft"
        },
        "dateOrdered": {
            "type": "date",
            "default": "javascript: return this.dateTime.getToday();"
        },
        "dateInvoiced": {
            "type": "date",
            "default": "javascript: return this.dateTime.getToday();"
        },
        "account": {
            "type": "link",
            "view": "sales:views/quote/fields/account"
        },
        "opportunity": {
            "type": "link",
            "view": "sales:views/sales-order/fields/opportunity"
        },
        "quote": {
            "type": "link",
            "view": "sales:views/sales-order/fields/quote"
        },
        "description": {
            "type": "text"
        },
        "billingAddress": {
            "type": "address"
        },
        "shippingAddress": {
            "type": "address"
        },
        "billingContact": {
            "type": "link",
            "view": "sales:views/quote/fields/contact"
        },
        "shippingContact": {
            "type": "link",
            "view": "sales:views/quote/fields/contact"
        },
        "tax": {
            "type": "link",
            "view": "sales:views/quote/fields/tax"
        },
        "taxRate": {
            "type": "float",
            "min": 0,
            "max": 100
        },
        "shippingProvider": {
            "type": "link"
        },
        "shippingCost": {
            "type": "currency",
            "layoutDetailDisabled": true
        },
        "taxAmount": {
            "type": "currency",
            "layoutDetailDisabled": true,
            "readOnly": true
        },
        "discountAmount": {
            "type": "currency",
            "layoutDetailDisabled": true,
            "readOnly": true
        },
        "amount": {
            "type": "currency"
        },
        "preDiscountedAmount": {
            "type": "currency",
            "layoutDetailDisabled": true,
            "readOnly": true
        },
        "grandTotalAmount": {
            "type": "currency",
            "layoutDetailDisabled": true,
            "readOnly": true
        },
        "weight": {
            "type": "float",
            "min": 0,
            "readOnly": true
        },
        "itemList": {
            "type": "jsonArray",
            "notStorable": true,
            "layoutDetailDisabled": true,
            "layoutFiltersDisabled": true,
            "layoutListDisabled": true,
            "view": "sales:views/quote/fields/item-list",
            "templatePlaceholderDisabled": true,
            "reportDisabled": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        },
        "assignedUser": {
            "type": "link",
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple"
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "tax": {
            "type": "belongsTo",
            "entity": "Tax"
        },
        "shippingProvider": {
            "type": "belongsTo",
            "entity": "ShippingProvider"
        },
        "account": {
            "type": "belongsTo",
            "entity": "Account",
            "foreign": "salesOrders"
        },
        "opportunity": {
            "type": "belongsTo",
            "entity": "Opportunity",
            "foreign": "salesOrders"
        },
        "quote": {
            "type": "belongsTo",
            "entity": "Quote",
            "foreign": "salesOrders"
        },
        "invoices": {
            "type": "hasMany",
            "entity": "Invoice",
            "foreign": "salesOrder",
            "audited": true
        },
        "billingContact": {
            "type": "belongsTo",
            "entity": "Contact",
            "foreign": "salesOrdersBilling"
        },
        "shippingContact": {
            "type": "belongsTo",
            "entity": "Contact",
            "foreign": "salesOrdersShipping"
        },
        "items": {
            "type": "hasMany",
            "entity": "SalesOrderItem",
            "foreign": "salesOrder",
            "layoutRelationshipsDisabled": true
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "EntityTeam",
            "layoutRelationshipsDisabled": true
        }
    },
    "collection": {
        "sortBy": "createdAt",
        "asc": false,
        "textFilterFields": ["name", "number"]
    }
}
